=form_for @question do |f|
  = render 'shared/form_error', object: f.object
  p
    =f.label :title
    =f.text_field :title
  p
    =f.label :body
    =f.text_area :body

  p
    | Attachments:
    br
    =f.fields_for :attachments do |a|
      =a.label :file
      =a.file_field :file

  p
    =f.submit "Create"